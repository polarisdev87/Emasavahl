{% comment %}Used for home page sections only when featured products is chosen but no content has been selected{% endcomment %}

{% if section.settings.homepage_product_layout == 'grid' %}
  <article class="product-loop">
    {% for i in (1..prod_limit) %}
      {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
      {%- assign placeholder = 'product-' | append: current -%}
      <div class="product {{ grid_item_width }} mobile-half">
        <div class="ci onboard">
          <a href="{{ product.url | within: collection }}" title="{{ product.title | escape }}">
            <div class="reveal">
              {{ placeholder | placeholder_svg_tag }}
            </div>
          </a>
        </div>
        <div class="product-details">
          <a href="#">
            <h3>Sample product {{ forloop.index }}</h3>
          </a>
          <div class="price">
            9.99
          </div>
        </div>
      </div>
    {% endfor %}
  </article>

{% elsif section.settings.homepage_product_layout == 'carousel' %}
  <div class="collection-carousel">
    {% for i in (1..prod_limit) %}
      {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
      {%- assign placeholder = 'product-' | append: current -%}
      <div class="lazyOwl product">
        <div class="ci onboard">
          <a href="{{ product.url | within: collection }}" title="{{ product.title | escape }}">
            <div class="reveal">
              {{ placeholder | placeholder_svg_tag }}
            </div>
          </a>
        </div>
        <div class="product-details">
          <a href="#">
            <h3>Sample product {{ forloop.index }}</h3>
          </a>
          <div class="price">
            9.99
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}
